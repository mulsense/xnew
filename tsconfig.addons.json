{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "es2015",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "strictFunctionTypes": false,
        "skipLibCheck": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "pretty": true,
        "newLine": "lf",
        "outDir": "dist/addons",
        "forceConsistentCasingInFileNames": true,
        "lib": ["es2015", "dom"]
    },
    "include": ["./src/addons/*.ts"],
}